#!/usr/bin/python2

from mininet.net import Mininet
from mininet.topolib import TreeTopo
import os, time

currPath = os.getcwd()

tree = TreeTopo(depth = 1, fanout = 3)
net = Mininet(topo = tree, xterms = False)
net.start()

for host in net.hosts:
    ip = host.IP()
    comm = ('python3 ./test.py %s &> ./log' % ip)+ip[-1]+'.txt &'
    # comm = ('python3 ./tester.py %s &> ./log' % ip)+ip[-1]+'.txt'
    # comm = 'ls'
    print(comm)
    host.cmd(comm)

time.sleep(15)
#net.stop()
